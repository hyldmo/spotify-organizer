{
	"compilerOptions": {
		"outDir": "./dist/",
		"sourceMap": true,
		"strict": true,
		"allowJs": true,
		"checkJs": false,
		"resolveJsonModule": true,
		"downlevelIteration": true,
		"module": "ESNext",
		"moduleResolution": "node",
		"target": "es6",
		"esModuleInterop": true,
		"jsx": "react",
		"baseUrl": ".",
		"paths": {
			"~/*": ["./src/*"]
		}
	},
	"files": ["./src/types/globals.ts", "./node_modules/@types/spotify-api/index.d.ts"],
	"include": ["src/**/*"],
	"ts-node": {
		"comment": "Needed to support .ts on webpack config",
		"compilerOptions": {
			"module": "CommonJS",
			"strict": false,
			"esModuleInterop": true
		}
	}
}

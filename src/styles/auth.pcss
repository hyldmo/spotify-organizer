@import './variables.pcss';

.auth {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: var(--background-highlight);

    display: flex;
    align-items: center;
    justify-content: center;

    & .button {
        padding: 0.6rem 1rem;
        font-size: 1.8rem;

        &:hover {
            padding: 0.6rem 1rem;
        }
    }
}
{
	"name": "spotify-organiser",
	"repository": "https://github.com/hyldmo/spotify-organizer",
	"version": "0.0.0-development",
	"scripts": {
		"dev": "webpack serve --config webpack/webpack.development.config.ts",
		"prod": "webpack --config webpack/webpack.production.config.ts --progress",
		"test": "jest",
		"test:cover": "jest --coverage && cat ./coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js",
		"lint": "eslint *.js src webpack --ext .ts,.tsx --ignore-path .gitignore",
		"stylelint": "stylelint src/**/*.scss",
		"format": "prettier --write . --ignore-path .gitignore",
		"format:check": "prettier --check . --ignore-path .gitignore",
		"stats": "webpack --config webpack/webpack.production.config.js --profile --json > compilation-stats.json",
		"release": "semantic-release --config ./release.config.js",
		"prepare": "husky install"
	},
	"jest": {
		"transform": {
			".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
		},
		"testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
		"moduleFileExtensions": [
			"ts",
			"tsx",
			"js",
			"json"
		],
		"moduleNameMapper": {
			"\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/__mocks__/fileMock.ts",
			"\\.(css|less|scss)$": "<rootDir>/__mocks__/styleMock.ts"
		}
	},
	"keywords": [
		"Typescript",
		"React",
		"Redux",
		"Spotify"
	],
	"license": "MIT",
	"dependencies": {
		"@fortawesome/fontawesome": "^1.1.8",
		"@fortawesome/fontawesome-free-solid": "^5.0.13",
		"@fortawesome/fontawesome-svg-core": "^1.2.0-11",
		"@fortawesome/react-fontawesome": "^0.1.0-10",
		"classnames": "^2.2.5",
		"cross-env": "^5.2.0",
		"history": "5.2.0",
		"lodash": "^4.17.11",
		"memoizee": "^0.4.11",
		"react": "17.0.2",
		"react-dom": "^17.0.2",
		"react-redux": "^7.2.6",
		"react-router": "^6.2.1",
		"react-router-dom": "6.2.1",
		"redux": "^4.1.2",
		"redux-first-history": "^5.0.8",
		"redux-saga": "^1.1.3",
		"tailwindcss": "^3.0.18",
		"typed-redux-saga": "^1.3.1"
	},
	"devDependencies": {
		"@commitlint/cli": "^16.0.0",
		"@commitlint/config-conventional": "^16.0.0",
		"@pmmmwh/react-refresh-webpack-plugin": "^0.5.4",
		"@types/classnames": "^2.2.3",
		"@types/history": "^5.0.0",
		"@types/jest": "^23.0.0",
		"@types/lodash": "^4.14.74",
		"@types/memoizee": "^0.4.2",
		"@types/node": "^16.0.16",
		"@types/react": "17.0.39",
		"@types/react-dom": "^17.0.11",
		"@types/react-redux": "^7.1.22",
		"@types/react-router": "^5.1.18",
		"@types/react-router-dom": "^5.3.3",
		"@types/react-test-renderer": "^16.8.1",
		"@types/spotify-api": "^0.0.13",
		"@types/spotify-web-playback-sdk": "^0.1.12",
		"@types/webpack-env": "^1.16.3",
		"@types/workbox-webpack-plugin": "^5.1.8",
		"@typescript-eslint/eslint-plugin": "^5.4.0",
		"@typescript-eslint/parser": "5.4.0",
		"autoprefixer": "^10.4.2",
		"coveralls": "^3.0.0",
		"css-loader": "^6.6.0",
		"eslint": "^8.3.0",
		"eslint-plugin-react": "^7.27.1",
		"eslint-plugin-react-hooks": "^4.3.0",
		"firebase-tools": "^10.1.4",
		"html-webpack-plugin": "^5.5.0",
		"husky": "^7.0.4",
		"jest": "^24.8.0",
		"mini-css-extract-plugin": "^2.5.3",
		"postcss": "^8.4.6",
		"postcss-loader": "^6.2.1",
		"prettier": "^2.5.1",
		"react-refresh": "^0.11.0",
		"react-refresh-typescript": "^2.0.3",
		"react-test-renderer": "^16.2.0",
		"sass": "^1.49.7",
		"sass-loader": "^12.4.0",
		"semantic-release": "^19.0.2",
		"style-loader": "^3.3.1",
		"stylelint": "latest",
		"stylelint-config-prettier-scss": "latest",
		"stylelint-config-recommended-scss": "latest",
		"stylelint-config-standard-scss": "latest",
		"stylelint-scss": "latest",
		"ts-jest": "^24.0.2",
		"ts-loader": "^9.2.6",
		"ts-node": "^10.4.0",
		"typescript": "^4.5.5",
		"webpack": "^5.68.0",
		"webpack-cli": "^4.3.0",
		"webpack-dev-server": "^4.7.4",
		"workbox-webpack-plugin": "^6.4.2"
	},
	"publishConfig": {
		"access": "restricted"
	},
	"commitlint": {
		"parserPreset": "conventional-changelog-conventionalcommits",
		"extends": [
			"@commitlint/config-conventional"
		]
	}
}

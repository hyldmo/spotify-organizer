{
	"name": "spotify-organizer",
	"repository": "https://github.com/hyldmo/spotify-organizer",
	"version": "0.5.0",
	"scripts": {
		"dev": "env-cmd webpack serve --config webpack/webpack.development.config.ts",
		"prod": "env-cmd webpack --config webpack/webpack.production.config.ts --progress",
		"test": "jest",
		"test:cover": "jest --coverage && cat ./coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js",
		"lint": "eslint *.js src webpack --ext .ts,.tsx --ignore-path .gitignore",
		"stylelint": "stylelint src/**/*.scss",
		"format": "prettier --check . --ignore-path .gitignore",
		"stats": "env-cmd webpack/.env webpack --config webpack/webpack.production.config.js --profile --json > compilation-stats.json"
	},
	"pre-commit": [
		"lint",
		"stylelint",
		"format"
	],
	"jest": {
		"transform": {
			".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
		},
		"testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
		"moduleFileExtensions": [
			"ts",
			"tsx",
			"js",
			"json"
		],
		"moduleNameMapper": {
			"\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/__mocks__/fileMock.ts",
			"\\.(css|less|scss)$": "<rootDir>/__mocks__/styleMock.ts"
		}
	},
	"keywords": [
		"Typescript",
		"React",
		"Redux",
		"Spotify"
	],
	"license": "MIT",
	"dependencies": {
		"@fortawesome/fontawesome": "^1.1.8",
		"@fortawesome/fontawesome-free-solid": "^5.0.13",
		"@fortawesome/fontawesome-svg-core": "^1.2.0-11",
		"@fortawesome/react-fontawesome": "^0.1.0-10",
		"classnames": "^2.2.5",
		"connected-react-router": "^6.4.0",
		"cross-env": "^5.2.0",
		"history": "^4.6.3",
		"lodash": "^4.17.11",
		"memoizee": "^0.4.11",
		"react": "^16.3.2",
		"react-dom": "^16.8.6",
		"react-redux": "^7.1.0",
		"react-router": "^5.0.1",
		"react-router-dom": "^5.0.1",
		"redux": "^4.0.0",
		"redux-saga": "^1.0.2",
		"tailwindcss": "^3.0.18",
		"typed-redux-saga": "^1.3.1"
	},
	"devDependencies": {
		"@hot-loader/react-dom": "^16.8.6",
		"@types/classnames": "^2.2.3",
		"@types/history": "^4.6.0",
		"@types/jest": "^23.0.0",
		"@types/lodash": "^4.14.74",
		"@types/memoizee": "^0.4.2",
		"@types/node": "^10.1.3",
		"@types/react": "^16.8.19",
		"@types/react-dom": "^16.8.4",
		"@types/react-redux": "^7.1.22",
		"@types/react-router": "^5.0.1",
		"@types/react-router-dom": "^4.3.3",
		"@types/react-test-renderer": "^16.8.1",
		"@types/spotify-api": "^0.0.13",
		"@types/spotify-web-playback-sdk": "^0.1.12",
		"@types/webpack": "^4.4.32",
		"@types/webpack-dev-server": "^3.1.6",
		"@types/webpack-env": "^1.13.9",
		"@typescript-eslint/eslint-plugin": "^5.4.0",
		"@typescript-eslint/parser": "5.4.0",
		"autoprefixer": "^10.4.2",
		"coveralls": "^3.0.0",
		"css-loader": "^6.6.0",
		"env-cmd": "^10.1.0",
		"eslint": "^8.3.0",
		"eslint-plugin-react": "^7.27.1",
		"eslint-plugin-react-hooks": "^4.3.0",
		"html-webpack-plugin": "^5.5.0",
		"jest": "^24.8.0",
		"mini-css-extract-plugin": "^2.5.3",
		"postcss": "^8.4.6",
		"postcss-loader": "^6.2.1",
		"pre-commit": "^1.2.2",
		"prettier": "^2.5.1",
		"react-hot-loader": "^4.1.2",
		"react-test-renderer": "^16.2.0",
		"redbox-react": "^1.5.0",
		"sass": "^1.49.7",
		"sass-loader": "^12.4.0",
		"style-loader": "^3.3.1",
		"stylelint": "latest",
		"stylelint-config-prettier-scss": "latest",
		"stylelint-config-recommended-scss": "latest",
		"stylelint-config-standard-scss": "latest",
		"stylelint-scss": "latest",
		"ts-jest": "^24.0.2",
		"ts-loader": "^9.2.6",
		"ts-node": "^10.4.0",
		"typescript": "^4.5.5",
		"webpack": "^5.68.0",
		"webpack-cli": "^4.3.0",
		"webpack-dev-server": "^3.11.0"
	}
}
